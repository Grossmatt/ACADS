<!DOCTYPE html>
<html>
    <head>
        <title>ACADS UserInterface</title>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
        <!--[if IE]><script type="text/javascript" src="excanvas.js"></script><![endif]-->
        <script src="js/jquery.knob.min.js"></script>
        <script src="js/knob-control.js"></script>
        <script src="js/jquery.toggler.js"></script>
        <script src="js/local.js"></script>
        <link rel="stylesheet" type="text/css" href="css/style.css">
        <link rel="stylesheet" href="css/ui-toggle.css">

        <script>
          $(function($) {
              $('#powerswitch').checkToggler();
              });
        </script>

    </head>
    <body class="dark">
        <div class="top-menu">
            <button id="MotorControl" class="top-menu-item selected">Motor Control</button>
            <button id="TroubleShooting" class="top-menu-item" >Troubleshooting</button>
        </div>
        <div id="ScreenMotorControl">
        <div class="topcontrol">
        <div class="switchbox">
        <input id="themeswitch" type="checkbox" class="checkbox ui-stoggle--hidden"><br />

        </div>
        <div class="motor">
            <p>Motor 1</p>
            <input id="motor1" class="knob" 
            data-cursor="true"
            data-height="150"
            data-width="150"
            data-bgColor="#4a4646"
            data-fgColor="#1bf782"            
            data-thickness=".3" 
            data-angleArc="220"
            data-angleOffset="-110"
            data-min="-40"
            data-max="40"
            value="0" />
            <div class="motorInput">
                <img id="motor1leftarrow" class="arrow" src="img/dark-leftarrow.png" />
                <input id="motor1inputbox" class="motorInputBox" type="text" maxlength="3" value="0" />
                <img id="motor1rightarrow" class="arrow" src="img/dark-rightarrow.png" />
            </div>
        </div>
        
        <div class="motor">
            <p>Motor 2</p>
            <input id="motor2" class="knob" 
            data-cursor="true"
            data-height="150"
            data-width="150"
            data-bgColor="#4a4646"
            data-fgColor="#1bf782"            
            data-thickness=".3" 
            data-angleArc="220"
            data-angleOffset="-110"
            data-min="-40"
            data-max="40"
            value="0"  />
            <div class="motorInput">
                <img id="motor2leftarrow" class="arrow" src="img/dark-leftarrow.png" />
                <input id="motor2inputbox" class="motorInputBox" type="text" maxlength="3" value="0" />
                <img id="motor2rightarrow" class="arrow" src="img/dark-rightarrow.png" />
            </div>
        </div>
        <div class="switchbox">
            <input id="powerswitch" type="checkbox" class="checkbox ui-stoggle--hidden"><br />
    
            </div>  
        
    <div>
        <div class="bottomcontrol">
        <div class="informationbox">
            <h1>Voltages</h1>
            <div class="statusbox">
                <input id="powerswitch" type="checkbox" class="checkbox ui-stoggle--hidden"><br />
                    <label class="statuslabel">Current: </label><label id="voltagestatus_curr" class="status-off">0.00</label><br />
                    <label class="statuslabel">5s Avg: </label><label id="voltagestatus_5" class="status-off">0.00</label><br />
                    <label class="statuslabel">10s Avg: </label><label id="voltagestatus_10" class="status-off">0.00</label><br />
                </div>
        </div>
        <div class="informationbox">
            <h1>Functions</h1>
            <div class="statusbox">
                <button class="control-button" id="functionalitycheck">Functionality Check</button>
                <button class="control-button" id="reset">Reset</button>
            </div>
        </div>
        <div class="informationbox">
            <h1>Status</h1>
            <div class="statusbox">
                <input id="powerswitch" type="checkbox" class="checkbox ui-stoggle--hidden"><br />
                    <label class="statuslabel">Power: </label><label id="powerstatus" class="status-off">OFF</label><br />
                    <label class="statuslabel">Motor 1: </label><label id="motor1status" class="status-off">OFF</label><br />
                    <label class="statuslabel">Motor 2: </label><label id="motor2status" class="status-off">OFF</label><br />
                    <label class="statuslabel">SOM: </label><label id="somstatus" class="status-off">OFF</label><br />
                </div>
        </div>
        <div id="ScreenTroubleShooting"> <p>TroubleShooting</p></div>   
    </body>
</html>